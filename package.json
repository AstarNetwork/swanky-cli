{
  "name": "@astar-network/swanky-cli",
  "version": "0.1.3",
  "description": "Astar network WASM contract CLI tool",
  "author": "Astar network",
  "bin": {
    "swanky": "./bin/run"
  },
  "homepage": "https://github.com/AstarNetwork/swanky-cli",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "https://github.com/AstarNetwork/swanky-cli",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "1.9.6",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.0.1",
    "@oclif/plugin-version": "^1.1.1",
    "@polkadot/api": "^8.14.1",
    "@polkadot/api-contract": "^8.14.1",
    "@polkadot/keyring": "^10.1.1",
    "@polkadot/util": "^10.1.1",
    "@polkadot/util-crypto": "^10.1.1",
    "bn.js": "^5.2.1",
    "debug": "^4.3.4",
    "decompress": "^4.2.1",
    "download": "^8.0.0",
    "enquirer": "^2.3.6",
    "execa": "5.1.1",
    "fs-extra": "^10.1.0",
    "listr2": "^4.0.5",
    "semver": "^7.3.7",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@polkadot/api-augment": "^8.14.1",
    "@polkadot/types": "^8.14.1",
    "@types/chai": "^4",
    "@types/download": "^8.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.6.1",
    "@types/progress": "^2.0.5",
    "@types/semver": "^7.3.10",
    "chai": "^4",
    "eslint": "^8.20.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globby": "11",
    "mocha": "^10.0.0",
    "oclif": "^3.1.1",
    "prettier": "^2.7.1",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4"
  },
  "oclif": {
    "bin": "swanky",
    "dirname": "swanky",
    "commands": "./dist/commands",
    "topicSeparator": " ",
    "additionalHelpFlags": [
      "-h"
    ],
    "additionalVersionFlags": [
      "-v",
      "-V"
    ],
    "topics": {
      "init": {
        "description": "Init a new WASM contract project"
      }
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-version"
    ]
  },
  "scripts": {
    "build": "shx rm -rf dist && rm tsconfig.tsbuildinfo && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "yarn lint",
    "prepack": "yarn build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/AstarNetwork/swanky-cli/issues",
  "keywords": [
    "oclif",
    "swanky",
    "cli",
    "astar",
    "shiden",
    "wasm"
  ],
  "types": "dist/index.d.ts"
}
