{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "NodeNext",
    "strict": true,
    "target": "es2020",
    "resolveJsonModule": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*", "src/test"],
  "ts-node": {
    "esm": true
  }
}
